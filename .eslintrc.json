{
    "env": {
        "commonjs": true,
        "es2021": false,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier/babel",
        "prettier"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    },
    "rules": {
        "prettier/prettier": "error",
        "semi": ["error", "never"],
        "prefer-const": "off",
        "no-restricted-syntax": "off",
        "no-restricted-globals": "off",
	    "no-console": "off",
        "no-plusplus": ["error", {
            "allowForLoopAfterthoughts": true
        }]
    }
}